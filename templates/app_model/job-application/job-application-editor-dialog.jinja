{#
job-application editor and creator dialog.

Required context:
- An unpacked `job-application` instance (required only for editing).
#}

{% from "close-dialog-button.jinja" import close_dialog_button %}

{% set operation = "edit" if id is defined else "create" %}
{% set hx_action = ('hx-patch="/job-application/' ~ id ~ '/"') if operation == "edit" else 'hx-post="/job-application/"' %}
{% set include_selectors = "#job-application-editor-dialog .modal-box input" %}

<dialog id="job-application-editor-dialog" class="modal" open>
    <div class="modal-box">
        <h3 class="text-lg font-bold">
            {% if operation == "edit" %}Edit {{ company }}: {{ title }} {% else %}New Job Application{% endif %}
        </h3>
        <div class="py-4">
            {% include "app_model/job-application/job-application-editor-form.jinja" %}
        </div>
        <div class="modal-action">
            <form method="dialog">
                {{ close_dialog_button() }}
                <button class="btn btn-primary" {% if operation=="edit" %} hx-patch="/job-application/{{id}}" {% else %}
                    hx-post="/job-application/" {% endif%} hx-target="#job-application-editor-dialog" hx-swap="delete"
                    hx-include="{{ include_selectors }}" hx-ext="json-enc">
                    Submit
                </button>

            </form>
        </div>
    </div>
</dialog>